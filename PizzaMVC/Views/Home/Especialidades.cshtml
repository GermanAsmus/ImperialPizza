
@{
    ViewBag.Title = "Especialidades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal well" style="margin-top:10px">
        <h2>Especialidades</h2>
        <hr />
        <h4>Especialidades que podrás encontrar en nuestras sucursales</h4>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Pizza Mozzarella</td>
                    <td>Sin definir</td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.Identity.Name == "cdelu@admin.com" || User.Identity.Name == "colon@admin.com" || User.Identity.Name == "sanjose@admin.com")
                        {
                            <td>@Html.ActionLink("Ver Detalles", "VerPizza", "Home") | @Html.ActionLink("Modificar", "ModificarPizza", "Home")</td>
                        }
                        else
                        {
                            <td>@Html.ActionLink("Ver Detalles", "VerPizza", "Home")</td>
                        }
                    }
                    else
                    {
                        <td>@Html.ActionLink("Ver Detalles", "VerPizza", "Home")</td>
                    }
                </tr>
                <tr>
                    <td>Empanadas Jamón y Queso x 1doc.</td>
                    <td>Sin definir</td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.Identity.Name == "cdelu@admin.com" || User.Identity.Name == "colon@admin.com" || User.Identity.Name == "sanjose@admin.com")
                        {
                            <td>@Html.ActionLink("Ver Detalles", "VerEmpanadas", "Home") | @Html.ActionLink("Modificar", "ModificarPizza", "Home")</td>
                        }
                        else
                        {
                            <td>@Html.ActionLink("Ver Detalles", "VerEmpanadas", "Home")</td>
                        }
                    }
                    else
                    {
                        <td>@Html.ActionLink("Ver Detalles", "VerEmpanadas", "Home")</td>
                    }
                </tr>
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.Identity.Name == "cdelu@admin.com" || User.Identity.Name == "colon@admin.com" || User.Identity.Name == "sanjose@admin.com")
                    {
                        <tr>
                            <td>@Html.ActionLink("Agregar Producto", "Create", "Productoes", null, new { @class = "btn btn-primary"})</td>
                            <td></td>
                            <td></td>
                        </tr>
                    }
                }
                </tbody>
            </table>
            <br />
            <br />
            @Html.ActionLink("<- Volver al Inicio", "Index", "Home")
        </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

