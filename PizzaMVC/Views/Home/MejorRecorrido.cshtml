
@{
    ViewBag.Title = "Mejor Recorrido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal well" style="margin-top:10px">
        <h2>Mejor Recorrido</h2>
        <hr />
        <h4>Cálculo del recorrido más óptimo para el reparto de los pedidos en estado pendientes de entrega</h4>

        <div class="form-group">
            <div class="col-md-10">
                <br />
                <button class="btn btn-primary">Calcular recorrido</button>
            </div>            
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <br />
                <img src="~/Content/Images/mapa-2.png" alt="Mapa Recorrido" height="600" width="1100"/>
            </div>
        </div>
        <br />
        <br />
        @Html.ActionLink("<- Volver al Inicio", "Index", "Home")
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
