
@{
    ViewBag.Title = "Empanadas de Jamon y Queso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal well" style="margin-top:10px">
        <h2>Empanadas de Jamón y Queso</h2>
        <hr />
        <h4>Detalles</h4>
        <div class="form-group">
            @Html.Label("Imagen", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <br />
                <img src="~/Content/Images/empanadas-2.jpg" alt="Empanadas de Jamón y Queso" height="400" width="500" />
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <br />
                <p>Empanadas de Jamón y Queso x 1 docena</p>
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Descripción", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <br />
                <p>1 docena de empanadas rellenas con jamón y queso</p>
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Precio", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <br />
                <p>Sin definir</p>
            </div>
        </div>
        <br />
        @Html.ActionLink("<- Volver a las Especialidades", "EspecialidadesCliente", "Home")
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

