
@{
    ViewBag.Title = "EspecialidadesCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal well" style="margin-top:10px">
        <h2>Especialidades</h2>
        <hr />
        <h4>Especialidades que podrás encontrar en nuestras sucursales</h4>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Detalles</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Pizza Mozzarella</td>
                    <td>Sin definir</td>
                    <td>@Html.ActionLink("Ver Detalles", "VerPizza", "Home")</td>
                </tr>
                <tr>
                    <td>Empanadas Jamón y Queso x 1doc.</td>
                    <td>Sin definir</td>
                    <td>@Html.ActionLink("Ver Detalles", "VerEmpanadas", "Home")</td>
                </tr>
            </tbody>
        </table>
        <br />
        <br />
        @Html.ActionLink("<- Volver al Inicio", "Index", "Home")
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

